#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(readlink -f /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p 0" ;;
esac

cmds="\
ğŸ–¥ shutdown	${shut:-sudo -A shutdown -h now}
ğŸ”ƒ reboot	${reb:-sudo -A reboot}
ğŸ”’ lock		slock
â™» renew dwm	kill -HUP $(pgrep -u $USER "\bdwm$")
ğŸšª leave dwm	kill -TERM $(pgrep -u $USER "\bdwm$")"

# ğŸ» hibernate	slock ${hib:-systemctl suspend-then-hibernate -i}
# ğŸ“º display off 	 xset dpms force off"

choice="$(echo "$cmds" | cut -d'	' -f 1 | rofi -dmenu -i)" || exit 1

eval "$(echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-)"
