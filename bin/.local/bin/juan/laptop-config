#!/bin/bash

intern=eDP1
extern=HDMI2

xbacklight -set 5 &
dropbox &

# No station
if xrandr | grep "$extern disconnected"; then
  xrandr --output "$extern" --off --output "$intern" --auto
  xrdb -merge ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources_laptop
# Station
else
  xrandr --output "$intern" --off --output "$extern" --auto
  xrdb -merge ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources_laptop_station
  xinput set-prop 13 "libinput Accel Profile Enabled" 0 1 & # logitech, disabled mouse acceleration
fi
